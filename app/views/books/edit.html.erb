<header>
  <h1>Edit Book</h1>
</header>

<div class="new-book">
  <%= form_for @book do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :authors %>
    <%= f.text_field :authors, :value => "" %>
    <%= f.label :pages %>
    <%= f.text_field :pages %>
    <%= f.label :publishing_year %>
    <%= f.text_field :publishing_year %>
    <%= f.submit %>
  <% end %>
</div>
